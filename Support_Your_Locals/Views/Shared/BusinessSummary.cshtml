@model UserBusiness

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Business.Header
            <span class="badge badge-pill badge-primary" style="float: right">
                <small>
                    @Model.Business.Product
                </small>
            </span>
        </h4>
    </div>
    <form asp-action="Index" asp-controller="Business" method="post">
        <input type="hidden" asp-for="Business.BusinessID" value =@Model.Business.BusinessID/>
        <!--Inneficient-->
        <span class="card-text p-1">
            @Model.User.Name
            @Model.User.Surname
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float: right">
                Go to
            </button>
        </span>
    </form>
</div>
